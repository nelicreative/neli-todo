<div class="container bg-white rounded p-5 d-flex flex-column align-items-center">
  <%= render "users/shared/logo_branch" %>
  <h2 class="font-weight-bold">Change your password</h2>

  <div class="w-50">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password", class: "text-dark" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "rounded p-2 border w-100" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "text-dark" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded p-2 border w-100" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>

  <%= render "users/shared/links" %>
</div>
